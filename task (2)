#include<stdio.h>
#include<stdlib.h>
int main(){
 int n,*p,i,max,sum=0;
 printf("Enter value of n:");
 scanf("%d",&n);
 p=(int*)malloc(n*sizeof(int));
 for(i=0;i<n;i++)
 scanf("%d",(p+i));
 max=*p;
 for(i=0;i<n;i++){
 sum+= *(p+i);
 if(*(p+i)>max)
 max=*(p+i);
 }
 printf("Sum= %d\n",sum);
 printf("Max=%d\n",max);
 free(p);
}
