//malloc-1
#include<stdio.h>
#include<stdlib.h>
int main() {
    int *ptr;
    ptr=(int*)malloc(sizeof(int));
    
    *ptr=10;
    printf("Value=%d\n",*ptr);
    free(ptr);
    return 0;
}
//malloc-2
#include<stdio.h>
#include<stdlib.h>
int main() {
    int n;
    printf("Enter the string length: ");
    scanf("%d",&n);
    
    char *str=(char*)malloc((n+1)*sizeof(char));
    printf("Enter the string: \n");
    scanf("%s",str);
    printf("You entered: %s",str);
    free(str);
    return 0;
}
//malloc-3
#include<stdio.h>
#include<stdlib.h>
int main()
{
    int *ptr = (int*)malloc(5*sizeof(int));
    for(int i=0;i<5;i++){
    ptr[i]=i+1;
    printf("%d",ptr[i]);
}
free(ptr);
return 0;
}
