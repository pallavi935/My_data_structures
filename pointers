//pointer
#include<stdio.h>
int main(){
    int a=100;
    int *ptr=&a;
    printf("%d\n",a);
    printf("%p",*ptr);
}
//swapping using pointer
#include<stdio.h>
int swap(int *a,int *b){
    int temp=*a;
    *a=*b;
    *b=temp;
}
int main(){
    int x=5,y=10;
    printf("Before swap:x = %d , y = %d\n",x,y);
    swap(&x,&y);
    printf("After swap: x = %d , y = %d\n",x,y);
}
//sum od two using the pointer
#include<stdio.h>
int swap(int *a,int *b){
    int temp=*a;
    *a=*b;
    *b=temp;
}
int main(){
    int x=5,y=10;
    printf("Before swap:x = %d , y = %d\n",x,y);
    swap(&x,&y);
    printf("After swap: x = %d , y = %d\n",x,y);
}
